{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspace": {
      "type": "string",
      "metadata": {
        "description": "Log Analytics workspace name"
      }
    },
    "workspace-location": {
      "type": "string",
      "metadata": {
        "description": "Location of the Log Analytics workspace"
      }
    },
    "username": {
      "type": "securestring",
      "metadata": {
        "description": "Cyolo API username"
      }
    },
    "password": {
      "type": "securestring",
      "metadata": {
        "description": "Cyolo API password"
      }
    },
    "dataCollectionEndpoint": {
      "type": "string",
      "metadata": {
        "description": "Data collection endpoint for the workspace"
      }
    },
    "dataCollectionRuleImmutableId": {
      "type": "string",
      "metadata": {
        "description": "Immutable ID of the Data Collection Rule"
      }
    },
    "apiEndpoint": {
      "type": "string",
      "defaultValue": "https://console.stg.cyolo.io/v1/activity_log",
      "metadata": {
        "description": "Cyolo API endpoint"
      }
    }
  },
  "variables": {
    "dataConnectorId": "CyoloRestApiPoller"
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces/providers/dataConnectors",
      "apiVersion": "2022-11-01-preview",
      "name": "[concat(parameters('workspace'), '/Microsoft.SecurityInsights/', variables('dataConnectorId'))]",
      "location": "[parameters('workspace-location')]",
      "kind": "RestApiPoller",
      "properties": {
        "connectorDefinitionName": "[variables('dataConnectorId')]",
        "dataType": "CyoloActivity_CL",
        "dcrConfig": {
          "streamName": "Custom-CyoloActivityLog",
          "dataCollectionEndpoint": "[parameters('dataCollectionEndpoint')]",
          "dataCollectionRuleImmutableId": "[parameters('dataCollectionRuleImmutableId')]"
        },
        "auth": {
          "type": "Basic",
          "userName": "[parameters('username')]",
          "password": "[parameters('password')]"
        },
        "request": {
          "apiEndpoint": "[parameters('apiEndpoint')]",
          "rateLimitQPS": 10,
          "queryWindowInMin": 5,
          "httpMethod": "GET",
          "timeoutInSeconds": 60,
          "headers": {
            "Accept": "application/json"
          },
          "pagination": {
            "type": "Page",
            "pageParamName": "_page",
            "startPage": 1,
            "maxPages": 10000
          }
        },
        "response": {
          "eventsJsonPaths": [
            "$.data[*]"
          ]
        }
      }
    }
  ]
}
